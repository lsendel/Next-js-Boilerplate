# Authentication Provider Selection
# Options: 'clerk', 'cloudflare', 'cognito', 'test'
# Switch between different auth providers without code changes
# 'test' - Simple form-based auth for E2E testing (DO NOT USE IN PRODUCTION)
NEXT_PUBLIC_AUTH_PROVIDER=test

# Clerk authentication (used when AUTH_PROVIDER=clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_cmVsYXhlZC10dXJrZXktNjcuY2xlcmsuYWNjb3VudHMuZGV2JA

# Cloudflare Access (used when AUTH_PROVIDER=cloudflare)
NEXT_PUBLIC_CLOUDFLARE_AUTH_DOMAIN=https://test-team.cloudflareaccess.com
NEXT_PUBLIC_CLOUDFLARE_AUDIENCE=test-audience-tag
NEXT_PUBLIC_CLOUDFLARE_VERIFY_JWT=false  # Disable JWT verification for local testing

# AWS Cognito (used when AUTH_PROVIDER=cognito)
# NOTE: Install aws-amplify first: npm install aws-amplify
# NEXT_PUBLIC_COGNITO_REGION=us-east-1
# NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
# NEXT_PUBLIC_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
#
# OAuth2 Configuration (Social Sign-In)
# NEXT_PUBLIC_COGNITO_OAUTH_DOMAIN=your-domain.auth.us-east-1.amazoncognito.com
# NEXT_PUBLIC_COGNITO_OAUTH_SCOPE=email,profile,openid
# NEXT_PUBLIC_COGNITO_REDIRECT_SIGN_IN=http://localhost:3000/dashboard
# NEXT_PUBLIC_COGNITO_REDIRECT_SIGN_OUT=http://localhost:3000/
#
# OAuth2 Providers (enable the providers you want to use)
# NEXT_PUBLIC_COGNITO_OAUTH_GOOGLE=true
# NEXT_PUBLIC_COGNITO_OAUTH_FACEBOOK=true
# NEXT_PUBLIC_COGNITO_OAUTH_APPLE=true
#
# MFA Configuration
# NEXT_PUBLIC_COGNITO_MFA_ENABLED=true
# NEXT_PUBLIC_COGNITO_MFA_METHOD=TOTP  # TOTP (authenticator app) or SMS
# NEXT_PUBLIC_COGNITO_MFA_ISSUER=MyApp  # Name shown in authenticator app

# Analytics
# PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Google Analytics (GA4)
