{
  "name": "next-js-boilerplate-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready Next.js 16 boilerplate with TypeScript, Tailwind CSS, authentication, i18n, testing, and monitoring",
  "author": "Ixartz (https://github.com/ixartz)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ixartz/Next-js-Boilerplate.git"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:docs": "pnpm --filter docs dev",
    "dev:all": "pnpm --parallel run dev",
    "build": "pnpm --filter web build",
    "build:docs": "pnpm --filter docs build",
    "build:all": "pnpm run build && pnpm run build:docs",
    "start": "pnpm --filter web start",
    "start:docs": "pnpm --filter docs start",
    "lint": "pnpm --filter web lint",
    "lint:docs": "pnpm --filter docs lint",
    "lint:all": "pnpm --parallel run lint",
    "test": "pnpm --filter web test",
    "test:e2e": "pnpm --filter web test:e2e",
    "clean": "pnpm --parallel run clean",
    "ci:check": "pnpm --filter web ci:check"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  }
}
